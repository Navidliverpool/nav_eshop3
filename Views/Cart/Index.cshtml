@model List<CartItem>

@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <h1>Cart</h1>

    @if (Model.Count > 0)
    {
        <table>
            <thead id="cartTableHead">
                @if (Model.Count > 0)
                {
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                        <th></th>
                    </tr>
                }
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>@(item.Quantity * item.Price)</td>
                        <td>
                            <a asp-action="UpdateCartItem" asp-route-productId="@item.ProductId"
                               class="btn btn-primary">Update</a>
                            <a asp-action="RemoveCartItem" asp-route-productId="@item.ProductId"
                               class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
            <a asp-action="ClearCart" class="btn btn-danger">Clear Cart</a>
        </div>
    }
    else
    {
        <p>No items in the cart yet.</p>
    }
</div>

@section Scripts {
    <script>
        var cartTableHead = document.getElementById("cartTableHead");

        if (@Model.Count == 0) {
            cartTableHead.style.display = "none";
        }
    </script>
}
